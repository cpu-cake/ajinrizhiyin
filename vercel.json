{
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "includeFiles": "{server/**,drizzle/**,shared/**,package.json,pnpm-lock.yaml,tsconfig.json}"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ],
  "outputDirectory": "dist/public",
  "buildCommand": "npm run build"
}
