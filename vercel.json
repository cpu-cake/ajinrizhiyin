{
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "{server/**,drizzle/**,shared/**,package.json,yarn.lock,tsconfig.json}",
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ],
  "outputDirectory": "dist/public",
  "buildCommand": "yarn build"
}
